<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox fx:id="leaderboardRoot" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.leaderboard.LeaderboardController">
   <children>
      <HBox fx:id="contentPane" spacing="20.0">
        <children>
          <VBox spacing="20.0" VBox.vgrow="ALWAYS" prefWidth="600">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label fx:id="seasonLabel" text="%leaderboard.season" styleClass="season"/>
                    <Pane HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label contentDisplay="RIGHT" graphicTextGap="10.0" maxWidth="1.7976931348623157E308">
                            <graphic>
                                <Region styleClass="icon,search-icon" />
                            </graphic>
                        </Label>
                        <TextField fx:id="searchTextField" maxWidth="1.7976931348623157E308" minWidth="120.0" prefWidth="120.0" promptText="%leaderboard.searchPrompt" styleClass="search" />
                    </HBox>
                 </children>
                </HBox>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <TabPane fx:id="subDivisionTabs" tabClosingPolicy="UNAVAILABLE" styleClass="subDivisionTabs"
                             AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="11.0" AnchorPane.bottomAnchor="0.0"
                             maxWidth="600.0">
                    </TabPane>
                    <ComboBox fx:id="majorDivisionPicker" styleClass="division-selector" onAction="#onMajorDivisionChanged"
                              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" promptText="Tiers"/>
                </AnchorPane>

                </children>
                <padding>
                  <Insets top="10.0" />
                </padding>
          </VBox>
            <VBox alignment="BOTTOM_LEFT" spacing="40.0">
               <children>
                  <HBox>
                     <children>
                       <VBox alignment="TOP_CENTER" spacing="20.0">
                         <StackPane minWidth="180">
                           <Group>
                             <Circle centerX="50" centerY="50" radius="80" styleClass="score-circle" />
                             <Arc fx:id="scoreArc" centerX="50" centerY="50" length="-360" radiusX="80" radiusY="80" startAngle="90" styleClass="score-arc" />
                           </Group>
                           <Label fx:id="playerScoreLabel" styleClass="score" text="6"/>
                         </StackPane>
                         <Label fx:id="scoreLabel" styleClass="heading" text="%leaderboard.score" />
                       </VBox>
                       <Pane minWidth="20.0" HBox.hgrow="ALWAYS" />
                       <VBox alignment="BOTTOM_CENTER" spacing="20.0">
                         <Label prefHeight="160" prefWidth="320" styleClass="map-preview" />
                         <ImageView fitHeight="0.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
                         <Label fx:id="playerDivisionNameLabel" styleClass="heading" text="%leaderboard.divisionName" />
                       </VBox>
                     </children>
                    <padding>
                      <Insets left="80.0" right="80.0" top="10.0" />
                    </padding>
                  </HBox>
                 <GridPane maxWidth="898" styleClass="player-card">
                   <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                   </columnConstraints>
                   <rowConstraints>
                     <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <children>
                     <BarChart fx:id="ratingDistributionChart" categoryGap="4.0" prefHeight="300.0" prefWidth="878.0"
                               title="Player Distribution" legendVisible="false" styleClass="leaderboardChart" >
                       <xAxis>
                         <CategoryAxis fx:id="ratingDistributionXAxis" animated="false" label="%leaderboard.divisions" side="BOTTOM" tickLabelGap="0.0" />
                       </xAxis>
                       <yAxis>
                         <NumberAxis fx:id="ratingDistributionYAxis" side="LEFT" label="%coop.leaderboard.players"/>
                       </yAxis>
                     </BarChart>
                   </children>
                   <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </padding>
                 </GridPane>
               </children>
            </VBox>
        </children>
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
        </padding>
      </HBox>
    <VBox fx:id="connectionProgressPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
        <JFXSpinner prefHeight="80.0" prefWidth="80.0" />
        <Label text="%leaderboard.loading">
          <VBox.margin>
            <Insets />
          </VBox.margin>
        </Label>
      </children>
    </VBox>
   </children>
</VBox>
